{
  "name": "my-map-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "FlightPlan application",
  "author": "KMJ",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "type-check": "tsc -b",
    "build": "tsc -b && vite build --mode production",
    "build:electron": "tsc -b && vite build --mode electron && electron-builder",
    "electron": "npm run build:electron && electron ./public/electron.js",
    "electron:installer": "tsc -b && vite build --mode electron && electron-builder --win",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cesium": "^1.130.1",
    "ol": "^10.5.0",
    "ol-ext": "^4.0.31",
    "ol-wind": "^1.1.9",
    "react": "^19.1.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.0",
    "sass": "^1.88.0",
    "vite-plugin-cesium": "^1.2.23",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "build": {
    "publish": null,
    "icon": "public/icon.ico",
    "appId": "com.developkmj.flightplan",
    "productName": "FlightPlan",
    "artifactName": "FlightPlan.${ext}",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/",
      "public/**/*",
      "node_modules/",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
